<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="OnlineStorePU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- MODELO: lista explícita de entidades -->
        <class>main.java.store.modelo.Cliente</class>
        <class>main.java.store.modelo.ClienteEstandar</class>
        <class>main.java.store.modelo.ClientePremium</class>
        <class>main.java.store.modelo.Articulo</class>
        <class>main.java.store.modelo.Pedido</class>

        <properties>

            <!-- Conexión a MySQL -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/tienda_online?serverTimezone=UTC"/>

            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="App4U"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <!-- Dialecto de Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

            <!-- Actualizar automáticamente el esquema -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Mostrar SQL por consola -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Disponible pero opcional -->
            <property name="hibernate.highlight_sql" value="true"/>

        </properties>
    </persistence-unit>

</persistence>